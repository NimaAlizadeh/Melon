<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ph"
        android:id="@+id/comments_recycler_userImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/comments_recycler_username"
        app:layout_constraintTop_toTopOf="@id/comments_recycler_userImage"
        app:layout_constraintStart_toEndOf="@id/comments_recycler_userImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NimaAlizadeh"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/comments_recycler_built_time"
        app:layout_constraintTop_toTopOf="@id/comments_recycler_username"
        app:layout_constraintStart_toEndOf="@id/comments_recycler_username"
        app:layout_constraintBottom_toBottomOf="@id/comments_recycler_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4w"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/comments_recycler_comment_text"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/comments_recycler_username"
        app:layout_constraintStart_toStartOf="@id/comments_recycler_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="this is the most beautiful thing that i have been seen in my whole life and it's really bajsad aksjdl aksdlkajd ksajlkj akjs dlkajsd lajsl ajsld ajsdlaj sdlakjsd lakjsd laksjd alksjdaljsd lasjdal jdlaksjd aljsd aljdlaksj dlkajsd alkjsd aljsdalkjd alksjd lasjdlkaj dlkajsd lakjsdalkjd lawdjadj alijdawjd ajdaljs dlkajdlkawj dlkja ldwjawjd lakwjdlakjwd "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp" />

    <View
        android:alpha="0.5"
        android:id="@+id/comments_recycler_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/comments_recycler_comment_text"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>