<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.firstFragment.FirstFragment"
    android:background="@drawable/back_ground_gradient"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:src="@drawable/audio_book_2"
        android:layout_marginBottom="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginBottom="@dimen/_10mdp"
        android:id="@+id/first_fragment_signUp_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_white_shape"
        android:elevation="5dp"
        android:fontFamily="@font/aclonica"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="@dimen/_12font_mdp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/first_fragment_login_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_white_shape"
        android:elevation="5dp"
        android:fontFamily="@font/aclonica"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="@dimen/_12font_mdp" />

</LinearLayout>